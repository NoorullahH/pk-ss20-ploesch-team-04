            <TableColumn fx:id="categoriesColumn" prefWidth="150.0" style="-fx-font-size: 14;" text="Categories" />
            <TableColumn fx:id="attachmentsColumn" prefWidth="150.0" style="-fx-font-size: 14;" text="Attachments" />
            <TableColumn fx:id="doneCheckBoxColumn" style="-fx-font-size: 14;" text="Done?" />
        </columns>
      </TableView>
      <Pane layoutX="75.0" layoutY="77.0" prefHeight="158.0" prefWidth="980.0" style="-fx-background-color: #04B486;">
         <children>
            <TextField fx:id="taskDescriptionField" layoutX="24.0" layoutY="15.0" prefHeight="32.0" prefWidth="170.0" promptText="Description" />
