      <ListView fx:id="categoryList" layoutX="581.0" layoutY="15.0" prefHeight="129.0" prefWidth="180.0" style="-fx-font-size: 12;" />
            <Button fx:id="submit" layoutX="877.0" layoutY="106.0" mnemonicParsing="false" onAction="#submit" prefHeight="30.0" prefWidth="90.0" text="Submit" textAlignment="CENTER">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <RadioButton fx:id="no" layoutX="877.0" layoutY="74.0" mnemonicParsing="false" text="no" textFill="WHITE">
               <toggleGroup>
                  <ToggleGroup fx:id="attachment" />
               </toggleGroup></RadioButton>
            <RadioButton fx:id="yes" layoutX="877.0" layoutY="46.0" mnemonicParsing="false" text="yes" textFill="WHITE" toggleGroup="$attachment" />
            <RadioButton fx:id="closed" layoutX="774.0" layoutY="74.0" mnemonicParsing="false" text="closed" textFill="WHITE">
               <toggleGroup>
                  <ToggleGroup fx:id="task_done" />
               </toggleGroup></RadioButton>
            <RadioButton fx:id="open" layoutX="774.0" layoutY="46.0" mnemonicParsing="false" text="open" textFill="WHITE" toggleGroup="$task_done" />
