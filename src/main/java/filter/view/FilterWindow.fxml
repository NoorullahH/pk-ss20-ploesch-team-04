        <columns>
            <TableColumn fx:id="descriptionColumn" prefWidth="150.0" style="-fx-font-size: 14;" text="Description" />
            <TableColumn fx:id="detailedDescriptionColumn" prefWidth="150.0" style="-fx-font-size: 14;" text="Detail description" />
            <TableColumn fx:id="dueDateColumn" prefWidth="150.0" sortType="DESCENDING" style="-fx-font-size: 14;" text="Due date" />
